<div class="app-navbar">
  <LinkTo @route="home" class="app-navbar__link" data-test-home-link>
    <FaIcon class="app-navbar__icon" @icon="home" />
    <small class="app-navbar__text">
      Home
    </small>
  </LinkTo>
  <LinkTo @route="records" class="app-navbar__link" data-test-records-link>
    <FaIcon class="app-navbar__icon" @icon="dumbbell"/>
    <small class="app-navbar__text">
      Records
    </small>
  </LinkTo>
  <LinkTo @route="goals" class="app-navbar__link" data-test-goals-link>
    <FaIcon class="app-navbar__icon" @icon="medal"/>
    <small class="app-navbar__text">
      Goals
    </small>
  </LinkTo>
  <LinkTo @route="notifications" class="app-navbar__link" data-test-notifications-link>
    {{#if this.notifications.hasNewNotifications}}
      <span class="badge__container">
        <FaIcon class="app-navbar__icon" @icon="bell"/>
        <span class="badge">{{this.notifications.totalNew}}</span>
      </span>
    {{else}}
      <FaIcon class="app-navbar__icon" @icon="bell"/>
    {{/if}}
    <small class="app-navbar__text">
      Notifs
    </small>
  </LinkTo>
  <LinkTo @route="my-network" class="app-navbar__link" data-test-my-network-link>
    <FaIcon class="app-navbar__icon" @icon="user-friends"/>
    <small class="app-navbar__text">
      Network
    </small>
  </LinkTo>
  <LinkTo @route="goals" class="app-navbar__link" data-test-goals-link>
    <FaIcon class="app-navbar__icon" @icon="sign-out-alt"/>
    <small class="app-navbar__text">
      Sign Out
    </small>
  </LinkTo>
</div>
