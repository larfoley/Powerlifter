<form {{on "submit" this.createOrUpdatePost}}>
  <div class="card">
    <div class="card__body">
        <div class="media">
          <div class="media__asset">
            <UserAvatar />
          </div>
          <div class="media__body">
            <Textarea
              class="textarea"
              rows="5"
              placeholder="Say something laurence..."
              autofocus="true"
              @value={{this.post.content}}
              maxlength={{1000}}
            />
          </div>
        </div>
    </div>
    <div class="card__footer button-group">
      <Button @text="Save Post" @submit={{true}} @primary={{true}} />
      <Button @text="Cancel" @submit={{true}} @secondary={{true}} />
    </div>
  </div>
</form>
