<Toolbar
  @title="Workout"
  @sticky={{false}}
  @tabs={{ array
    (hash label="Diary" route="workout.diary")
    (hash label="Programs" route="workout.programs")
    (hash label="History" route="workout.history")
  }}
/>
{{#if @model}}
  <WorkoutProgram
    @workoutProgram={{@model}}
  />
{{else}}
  <ZeroStateMessage @icon="book">
    You have not active workout program
  </ZeroStateMessage>
{{/if}}
