<PageOverlay @title="Add New Record">
  <Toolbar
    @title={{concat "Add " (capitalize @model.exercise.name) " Record"}}
    @backRoute="exercises.exercise.records"
    @backRouteModle={{@model.exercise}}
  />
  <PageContainer>
    <PageContainer::PrimaryContent>
    <LiftRecordForm
      @exerciseOptions={{@model.exercises}}
      @selectedExercise={{@model.exercise}}
      @onCreateOrUpdate={{action this.transitionToRoute "exercises.exercise.records" @model.exercise}}
    />
    </PageContainer::PrimaryContent>
  </PageContainer>
</PageOverlay>
