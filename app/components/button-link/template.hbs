{{#if @model}}
  <LinkTo
    @route={{@route}}
    @model={{@model}}
    @query={{@query}}
    class="button-link {{if @primary "button-link--primary"}} {{if @secondary "button-link--secondary"}}"
    ...attributes
  >
    {{#if @text}}
      {{#if @icon}}
        <FaIcon @icon={{@icon}} @prefix={{if @prefix @prefix "fas"}}/>
      {{/if}}
      {{@text}}
    {{/if}}
    {{yield}}
  </LinkTo>
  {{else}}
  <LinkTo
    @route={{@route}}
    @query={{@query}}
    class="button-link {{if @primary "button-link--primary"}}"
    ...attributes
  >
    {{#if @text}}
      {{#if @icon}}
        <FaIcon @icon={{@icon}} @prefix={{if @prefix @prefix "fas"}}/>
      {{/if}}
      {{@text}}
    {{/if}}
    {{yield}}
  </LinkTo>
{{/if}}
