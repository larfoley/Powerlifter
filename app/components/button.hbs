<BasicDropdown as |dd|>
  <dd.Trigger class="">
    <button type={{if @type @type "button"}}  class="button" onclick={{@onClick}} ...attributes >
      {{#if @text}}
      {{#if @icon}}
      <FaIcon @icon={{@icon}}/>
      {{/if}}
      {{@text}}
      {{else}}
      {{#if @icon}}
      <FaIcon class="button__icon" @icon={{@icon}}/>
      {{/if}}
      {{yield}}
      {{/if}}

      <span>
        <FaIcon @icon="caret-down"/>
      </span>
    </button>
  </dd.Trigger>
  <dd.Content class="dropdown-content">
    <ul class="list">
      <li class="list__item">
        <FaIcon @icon="plus"/> Hello World
      </li>
      <li class="list__item">
        <FaIcon @icon="plus"/> Goodbye World
      </li>
    </ul>
  </dd.Content>
</BasicDropdown>
