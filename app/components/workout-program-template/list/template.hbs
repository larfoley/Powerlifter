<div class="box box--transparent box--with-margin">
  {{#each @workoutPrograms as |program|}}
    <div class="card">
      <div class="card__body">
        <h3>Program name</h3>
        <p>{{program.author}}</p>
        <h4 class="h5">Duration</h4>
        <p>7 Weeks</p>
        <h4 class="h5">Exercises</h4>
        <ul class="inline-list">
          <li class="inline-list__item">
            <span class="chip">Squat</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Bench</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Deadlift</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Squat</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Bench</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Deadlift</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Squat</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Bench</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Deadlift</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Squat</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Bench</span>
          </li>
          <li class="inline-list__item">
            <span class="chip">Deadlift</span>
          </li>
        </ul>

      </div>
      <div class="card__footer">
        <Button @text="Activate" @primary={{true}} />
        <Button
          @text="Preview" @secondary={{true}}
          @route="workout.my-programs.my-program"
          @model={{program}}
        />
      </div>
    </div>
  {{/each}}
</div>
