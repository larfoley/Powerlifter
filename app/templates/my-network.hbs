<AppNavbar />
<AppToolbar @title="My Network" >
  <LinkTo
    @route="posts.new"
    class="app-toolbar__item"
  >
    <FaIcon @icon="edit" class="button__icon"/>
  </LinkTo>
</AppToolbar>
<AppContainer>
  <NavbarTabs
    @tabs={{array
      (hash
        displayName = "Feed"
        route = "my-network.feed"
        icon="rss"
      )
      (hash
        displayName = "Search"
        route = "my-network.search"
        icon="search"
      )
      (hash
        displayName = "Friends"
        route = "my-network.friends"
        icon="users"
      )
      (hash
        displayName = "Friend Requests"
        route = "my-network.friend-requests"
        icon="exchange-alt"
      )
    }}
  />
  <PageContainer>
    {{outlet}}
  </PageContainer>
</AppContainer>
