<FullScreenModal @title="Add New Record">
  <Toolbar
    @title={{concat "Add " (capitalize @model.exercise.name) " Record"}}
    @backRoute="exercises.exercise.records"
    @backRouteModel={{@model.exercise}}
    @showCloseIcon={{true}}
  />
  <LiftRecordForm
    @selectedExercise={{@model.exercise}}
    @records={{@model.records}}
  />
</FullScreenModal>
