<div class="card {{if @flat "card--flat"}}">
  <div class="card__body">
    <div>
      <TextInput
        @placeholder="Search exercises..."
        @icon="search"
        @onKeyUp={{fn this.handleKeyPress}}
      />
    </div>
    <div class="card__section">
      <ul class="card__list">
        {{#each this.filteredExercises as |exercise index|}}
          <li tabindex={{index}} role="button" class="card__list-item" {{on 'click' (fn this.selectExercise exercise)}}>
            <div class="flex flex--space-between flex--align-items-center">
              <span>
                {{exercise.name}}
              </span>
              <Icon @icon="check" @primary={{true}} />
            </div>
          </li>
        {{else}}
          <p>No exercises found</p>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
