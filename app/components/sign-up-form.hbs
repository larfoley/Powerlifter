<form data-test-sign-up>
  <div class="card">
    <div class="card__body">
      <InputField
        @label="Username"
        @errors={{this.goal.errors.username}}
      >
        <TextInput
          @value={{@user.username}}
          @label="Username"
          @errors={{@user.errors.username}}
          @icon="user"
          data-test-username
        />
      </InputField>
      <InputField
        @label="Email"
        @errors={{this.goal.errors.email}}
      >
        <TextInput
          @value={{@user.email}}
          @label="Email"
          @errors={{@user.errors.email}}
          data-test-email
          @icon="envelope"
        />
      </InputField>
      <InputField
        @label="Password"
        @errors={{this.goal.errors.password}}
      >
        <TextInput
          type="password"
          @value={{@user.password}}
          @label="Password"
          @errors={{@user.errors.password}}
          @icon="lock"
          data-test-password
        />
      </InputField>
      <Button
        @submit={{true}}
        @primaryButton={{true}}
        @icon="paper-plane"
        data-test-submit-button
      >
        Sign Up
      </Button>
    </div>
  </div>
  <p class="text-align-center">
    Already have an account ? <LinkTo @route="sign-in">Sign In</LinkTo>
  </p>
</form>
