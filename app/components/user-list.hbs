<div class="card" data-test-user-list>
  {{#each @users as |user|}}
  <div class="card__body" data-test-user-item>
    <div class="media">
      <div class="media__asset">
        <FaIcon @icon="user-circle" @size="3x"/>
      </div>
      <div class="media__body">
        <h3 data-test-user-item-username>{{user.username}}</h3>
        <FriendRequestButton @user={{user}} />
      </div>
    </div>
  </div>
  {{/each}}
</div>
