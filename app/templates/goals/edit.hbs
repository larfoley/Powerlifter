<FullScreenModal>
  <Toolbar @title="Edit Goal" @backRoute="goals" @showCloseIcon={{true}} />
  <GoalForm
    @exercises={{@model.exercises}}
    @goal={{@model.goal}}
    @actions={{array
      (hash icon="plus" route="goals.new")
    }}
    @onCreateOrUpdate={{action this.transitionToRoute "goals"}}
  />
  {{outlet}}
</FullScreenModal>
