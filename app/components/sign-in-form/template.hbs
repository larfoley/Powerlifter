<form>
  <div class="card">
    <div class="card__body">
      <TextInput
        @value={{this.username}}
        @label="Username"
        data-test-username
      />
      <TextInput
        @type="password"
        @value={{this.password}}
        @label="Password"
        data-test-password
      />
      <button type="submit" class="button">Sign In</button>
    </div>
  </div>
  <p class="text-align-center">
    Dont have an account ? <LinkTo @route="sign-up">Sign Up</LinkTo>
  </p>
</form>
