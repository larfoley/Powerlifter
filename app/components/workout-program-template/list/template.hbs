<div>
  {{#each @workoutPrograms as |program|}}
    <div class="card">
      {{!-- <div class="card__header">
        <div class="flex flex--space-between">
          <div class="">
            <div class="h3">{{program.name}}</div>
          </div>
          <div class="">
            <Icon
              @icon="trash-alt"
              @prefix="far"
              {{on 'click' (fn this.deleteWorkoutProgram program)}}
            />
          </div>
        </div>
      </div> --}}
      <div class="bg">
      </div>
      <div class="card__body">
        {{!-- <h4 class="h4">Blaster City</h4> --}}
        {{!-- <div class="h6">Duration</div>
        <p>{{program.duration}} Weeks</p> --}}
        <div class="h6">Exercises</div>
        {{!-- <ul class="inline-list"> --}}
          {{#each program.exercises as |exercise|}}
            {{!-- <li class="inline-list__item"> --}}
              <span class="text">{{exercise}},</span>
            {{!-- </li> --}}
          {{/each}}
        {{!-- </ul> --}}
      </div>
      <div class="card__footer">
        <div class="u-display--flex u-justify-content--flex-end">
          <Button
            @text="Start"
            {{on 'click' (if this.workout.hasActiveWorkoutProgram
                (fn this.showActivateProgramConfirmDialog program)
                (fn this.activateProgram program)
              )
            }}
          />
          <Button
            @text="Preview"
            @route="workout.my-programs.my-program"
            @model={{program}}
          />
        </div>
      </div>
    </div>
  {{/each}}
  {{#if this.showingActivateProgramConfirmDialog}}
    <ConfirmModal
      @title="Start Program?"
      @text="You already started a workout program are you sure you want to to start this program instead?"
      @onCancel={{fn this.hideActivateProgramConfirmDialog}}
      @onConfirm={{fn this.activateProgram this.selectedProgram}}
    />
  {{/if}}
</div>
