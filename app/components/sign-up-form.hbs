<form data-test-sign-up>
  <h2 class="u-center-text u-bolder">Sign Up</h2>
  <Form::Field
    @label="Username"
    @errors={{@user.errors.username}}
  >
    <TextInput
      @value={{@user.username}}
      @label="Username"
      @icon="user"
      data-test-username
    />
  </Form::Field>
  <Form::Field
    @label="Email"
    @errors={{@user.errors.email}}
  >
    <TextInput
      @value={{@user.email}}
      @label="Email"
      data-test-email
      @icon="envelope"
    />
  </Form::Field>
  <Form::Field
    @label="Password"
    @errors={{@user.errors.password}}
  >
    <TextInput
      type="password"
      @value={{@user.password}}
      @label="Password"
      @icon="lock"
      data-test-password
    />
  </Form::Field>
  <p>
    <Button
      @submit={{true}}
      @primaryButton={{true}}
      @icon="paper-plane"
      data-test-submit-button
      @text="Sign Up"
      @fullWidth={{true}}
    />
  </p>
  <p class="text-align-center">
    Already have an account ? <LinkTo @route="sign-in">Sign In</LinkTo>
  </p>
</form>
{{log @user.errors.password}}
