<div class="card">
  <div class="card__body">
    <div>
      <TextInput
        @placeholder="Search exercises..."
        @icon="search"
        @onKeyUp={{fn this.handleKeyPress}}
      />
    </div>
    <ul class="card__list">
      {{#each this.filteredExercises as |exercise|}}
        <li class="card__list-item" {{on 'click' (fn this.goToExercise exercise)}}>
          {{exercise.name}}
        </li>
      {{else}}
        <p>No exercises found</p>
      {{/each}}
    </ul>
  </div>
</div>
