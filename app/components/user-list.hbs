<div class="card" data-test-user-list>
  {{#each @users as |user|}}
  <div class="card__body" data-test-user-item>
    <div class="media">
      <div class="media__asset">
        <FaIcon @icon="user-circle" @size="3x"/>
      </div>
      <div class="media__body">
        <h2 data-test-user-item-username>{{user.username}}</h2>
        <Button
          @text="Add Friend"
          @icon="user-plus"
          @onClick={{fn @sendFriendRequest user}}
          data-test-user-item-add-friend-button
        />
      </div>
    </div>
  </div>
  {{/each}}
</div>
